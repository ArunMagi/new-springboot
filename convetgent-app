apiVersion: apps/v1
kind: Deployment
metadata:
  name: reader
spec:
  replicas: 1
  selector:
    matchLabels:
      app: reader
  template:
    metadata:
      labels:
        app: reader
    spec:
      containers:
      - name: nginx
        image: convergentech/ibp-obe-service
        ports:
        - containerPort: 8080
        volumeMounts:
        - name: persistent-storage
          mountPath: "/opt/app/logs/"
      volumes:
      - name: persistent-storage
        persistentVolumeClaim:
          claimName: efs-claim

---

apiVersion: v1
kind: Service
metadata:
  name: reader
spec:
  selector:
    app: reader
  ports:
  - protocol: TCP
    port: 8080
    targetPort: 8080
